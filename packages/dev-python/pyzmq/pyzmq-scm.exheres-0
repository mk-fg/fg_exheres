SCM_REPOSITORY="git://github.com/ellisonbg/pyzmq.git"

require distutils scm-git

SUMMARY="Official python bindings for ZeroMQ library."

HOMEPAGE="http://www.zeromq.org/bindings:python"

LICENCES="LGPL"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        net-libs/zeromq
"

BUGS_TO="mk.fraggod@gmail.com"
REMOTE_IDS="pypi:${PN}"
UPSTREAM_DOCUMENTATION="
    http://github.com/ellisonbg/pyzmq/tree/master/docs/ [[ lang = en
        description = [ Sphinx-based documentation ] ]]"


src_prepare() {
    edo awk -F= '/^library_dirs/ {print $1 "= /usr/lib"; next}\
            /^include_dirs/ {print $1 "= /usr/include"; next} {print}'\
        setup.cfg.template >setup.cfg
}
