SCM_REPOSITORY="git://github.com/powdahound/twisted.git"

require distutils scm-git

SUMMARY="An asynchronous networking framework written in Python."

HOMEPAGE="http://www.twistedmatrix.com/"

LICENCES="as-is"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        !net-twisted/twisted
    recommendation:
        dev-python/pyasn1 [[ note = [ for using ssh keys with twisted.conch ] ]]
        dev-python/pycrypto [[ note = [ for twisted.conch ] ]]
        dev-python/pyopenssl [[ note = [ enables SSL support ] ]]
    run:
        dev-python/zopeinterface[>=3.0.1]
"

BUGS_TO="mk.fraggod@gmail.com"
