require distutils

SUMMARY="Feed aggregator written in Python using the Django web development framework."

HOMEPAGE="http://fraggod.net/code/fossil/feedjack"
DOWNLOADS=""

LICENCES="BSD-3"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
    build:
        dev-scm/fossil
    run:
        dev-python/django
        dev-python/feedparser
"

BUGS_TO="mk.fraggod@gmail.com"


WORK=$WORKBASE
FOSSIL="${FETCHEDDIR}/${PN}".fossil

src_fetch_extra() {
    edo rm -f "$FOSSIL"
    edo fossil clone "$HOMEPAGE" "$FOSSIL"
}

src_unpack() {
    edo cp "$FOSSIL" .
    edo fossil open "$(basename "$FOSSIL")"
}
