[Unit]
Description=Squid Proxy Server
After=network.target

[Service]
ExecStart=/usr/sbin/squid -NYC
ExecReload=/usr/sbin/squid -k reconfigure
ExecStop=/usr/sbin/squid -k shutdown

[Install]
WantedBy=multi-user.target
