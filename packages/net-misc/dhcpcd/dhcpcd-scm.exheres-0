SCM_REPOSITORY="http://roy.marples.name/projects/${PN}"

require scm-fossil

SUMMARY="RFC2131 compliant DHCP client"

HOMEPAGE="http://roy.marples.name/projects/${PN}"

LICENCES="BSD-2"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS=""

DEPENDENCIES="
    build:
        dev-scm/fossil
    build+run:
        sys-apps/systemd [[ note = [ for udev ] ]]
"

BUGS_TO="mk.fraggod@gmail.com"


DEFAULT_SRC_CONFIGURE_PARAMS=(
    --dbdir=/var/lib/dhcpcd
    --libdir=/${LIBDIR}
    --libexecdir=/${LIBDIR}/dhcpcd
    --rundir=/run
    --sbindir=/sbin
    --enable-ipv6
    --with-hooks="yp ntp"
)

src_install() {
    default
    keepdir /var/lib/dhcpcd
}
