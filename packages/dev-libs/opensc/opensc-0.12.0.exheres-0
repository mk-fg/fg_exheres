SUMMARY="SmartCard library and applications."

HOMEPAGE="http://www.opensc-project.org/opensc/"
DOWNLOADS="http://www.opensc-project.org/files/${PN}/${PNV}.tar.gz"

LICENCES="LGPL-2.1"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="doc
    openct [[ description = [ Support for accessing smartcards via OpenCT middleware. ] ]]
    pcsc-lite [[ description = [ Support for accessing smartcards
        via PC/SC Architecture smartcard middleware library. ] ]]"

DEPENDENCIES="
    build:
        dev-util/pkg-config
    build+run:
        dev-libs/openssl
        sys-libs/readline
        sys-libs/zlib
        openct? ( dev-libs/openct[>=0.5.0] )
        pcsc-lite? ( sys-apps/pcsc-lite[>=1.3.0] )
"

BUGS_TO="mk.fraggod@gmail.com"
REMOTE_IDS="freshmeat:${PN}"
UPSTREAM_DOCUMENTATION="
    ${HOMEPAGE}wiki/ApplicationSupport [[ lang = en
        description = [ PKCS11 infrastructure support in applications ] ]]
    ${HOMEPAGE}wiki/SupportedHardware [[ lang = en
        description = [ Hardware support status ] ]]"


DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=( doc openct "pcsc-lite pcsc" )
DEFAULT_SRC_CONFIGURE_PARAMS=(
    --docdir="/usr/share/doc/${PNVR}"
    --htmldir="/usr/share/doc/${PNVR}/html"
    --enable-man
    --enable-openssl
    --enable-readline
    --enable-zlib
    --disable-ctapi
    --disable-cardmod )

src_install() {
    default
    rmdir "${IMAGE}"/usr/sbin
    option doc || edo rmdir "${IMAGE}"/usr/share/doc/opensc-0.12.0/html
}
