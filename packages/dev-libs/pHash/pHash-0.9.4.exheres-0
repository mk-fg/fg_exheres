SUMMARY="The open source perceptual hash library."

HOMEPAGE="http://phash.org/"
DOWNLOADS="http://phash.org/releases/pHash-0.9.4.tar.gz"

LICENCES="GPL-3"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="audio image openmp video"

DEPENDENCIES="
    build+run:
        audio? (
            media-libs/libsamplerate
            media-libs/libsndfile
            media-sound/mpg123
        )
        image? ( dev-libs/CImg )
        openmp? ( sys-devel/gcc[openmp] )
        video? (
            dev-libs/CImg
            virtual/ffmpeg
        )
"

BUGS_TO="mk.fraggod@gmail.com"


DEFAULT_SRC_CONFIGURE_PARAMS=( --disable-java )
DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=(
    'audio audio-hash' 'image image-hash' 'video video-hash' openmp )
