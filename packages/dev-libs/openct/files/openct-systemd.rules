# Example udev/systemd rules-file for a particular openct device.
#
# Can be dropped at /etc/udev/rules.d/70-openct.rules
#  to override broken pre-systemd rules-file.

SUBSYSTEM!="usb", GOTO="openct_rules_end"
ACTION!="add", GOTO="openct_rules_end"

SUBSYSTEM=="usb", ENV{DEVTYPE}=="usb_device",\
 ENV{ID_VENDOR_ID}=="0529", ENV{ID_MODEL_ID}=="0600",\
 GROUP="usb", TAG+="systemd",\
 ENV{SYSTEMD_WANTS}="openct-handler@usb:$env{ID_VENDOR_ID}-$env{ID_MODEL_ID}-$env{ID_REVISION}\x20usb\x20-dev-bus-usb-$env{BUSNUM}-$env{DEVNUM}.service"

LABEL="openct_rules_end"
