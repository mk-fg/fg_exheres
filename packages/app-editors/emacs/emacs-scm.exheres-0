BUGS_TO="mk.fraggod@gmail.com"


DEFAULT_SRC_CONFIGURE_PARAMS=(
    --infodir=/usr/share/info/emacs
    --without-kerberos
    --without-kerberos5
    --without-hesiod
    --without-m17n-flt
    --without-xaw3d
    --without-xim
    --without-ns # NeXTstep
    --without-selinux

    # No idea how these work
    --without-gconf
    --without-gsettings

    # Obsolete mail features
    --without-pop
    --without-mmdf

    --with-xml2

    # Not sure how these will work wih -X
    --with-gif --with-jpeg --with-png
)

DEFAULT_SRC_CONFIGURE_OPTION_WITHS=(
    'X x'
    'alsa sound'
    'freetype xft'
    'gtk x-toolkit=gtk3' 'gtk toolkit-scroll-bars'
    'otf libotf'
    'svg rsvg'
    dbus gpm tiff xpm imagemagick
)

src_prepare() {
    edo ./autogen.sh
    # Compressing *.el files saves 25MB diskspace, which is not worth it on modern systems
    edo sed -i -e 's/@GZIP_PROG@//' {.,leim}/Makefile.in
}

src_install() {
    default

    insinto ${ELISP_SITE_LISP}
    hereins site-start.el <<EOF
(require 'site-exherbo)
EOF

    local i
    for i in "${IMAGE}"/usr/share/info/${PN}/*; do
        edo mv "${i}" "${i}.info"
    done

    cd "${IMAGE}"
    edo mv usr/share/man/man1/ctags{,-emacs}.1
    edo mv usr/bin/ctags{,-emacs}
    alternatives_for ctags emacs 500 \
        /usr/bin/ctags ctags-emacs \
        /usr/share/man/man1/ctags.1 ctags-emacs.1

    hereenvd 70${PN} <<EOF
INFOPATH="/usr/share/info/${PN}"
EOF
}

pkg_postinst() {
    alternatives_pkg_postinst
    elisp-generate-global-site-file
}

pkg_postrm() {
    :
}
