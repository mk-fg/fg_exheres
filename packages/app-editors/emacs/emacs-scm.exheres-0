require scm-git alternatives elisp-module autotools [ supported_autoconf=[ 2.5 ] supported_automake=[ 1.11 ] ]

SUMMARY="The extensible, customizable, self-documenting, real-time display editor"

HOMEPAGE="http://www.gnu.org/software/emacs/"

LICENCES="GPL-3"
SLOT="0"
PLATFORMS="~amd64 ~x86"
MYOPTIONS="
    X alsa dbus freetype gpm gtk otf svg tiff xpm
    ( freetype gtk imagemagick jpeg otf png svg tiff tiff xpm ) [[ requires = X ]]
